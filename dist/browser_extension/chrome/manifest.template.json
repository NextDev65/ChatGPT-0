{
  "manifest_version": 3,
  "name": "ChatGPT Zero",
  "version": "{{VERSION}}",
  "description": "Enhance your ChatGPT experience with simple tools to boost productivity.",
  "permissions": [],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["ChatGPT-Zero.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
